# ~/.editorconfig or .editorconfig at project root

# Top-most EditorConfig file
root = true

# Global defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Tab indentation for Makefiles
[Makefile]
indent_style = tab

# JSON files use 2 spaces
[*.json]
indent_size = 2

# YAML files use 2 spaces
[*.yml]
indent_size = 2

# Markdown files: no trimming
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

# Python-specific
[*.py]
indent_size = 4

# Java files
[*.java]
indent_size = 4

# Go files
[*.go]
indent_style = tab

# Rust
[*.rs]
indent_size = 4

# C/C++
[*.{c,h,cpp,hpp}]
indent_size = 4
