# ~/.curlrc

# 🕵️‍♂️ Disguise as Chrome on macOS to mimic a real browser user-agent
user-agent = "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_3) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/79.0.3945.130 Safari/537.36"

# 🔁 Automatically set the previous URL as the Referer when following redirects
referer = ";auto"

# ⏱ Set connection timeout (seconds) — fail if no connection is made in 60s
connect-timeout = 60

# 🔃 Retry transient failures up to 3 times
retry = 3

# 🌐 Prefer IPv4 (IPv6 sometimes breaks on flaky networks)
ipv4

# 📦 Use HTTP/2 when available for better performance
http2

# 📊 Display progress as a bar
progress-bar

# 📍 Follow 30x redirects automatically
location

# 🎯 Set overall timeout for entire transfer (e.g., 2 minutes max)
max-time = 120
