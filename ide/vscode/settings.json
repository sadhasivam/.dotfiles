{
  // ========== Python ==========
  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",

  // ========== Visuals & Editor ==========
  "editor.formatOnSave": true,
  "editor.fontFamily": "'JetBrains Mono', 'Fira Code', 'Hack', 'Source Code Pro', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 16,                   // comfortable base, raise to 17 on 27"+ monitors
  "editor.lineHeight": 1.5,
  "editor.fontLigatures": true,
  "editor.fontWeight": "normal",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.minimap.enabled": false,
  "editor.guides.bracketPairs": "active",  // highlight active bracket pair
  "editor.guides.indentation": true,       // subtle indent guides for structure
  "editor.renderWhitespace": "boundary",
  "editor.stickyScroll.enabled": true,     // keep function/class headers visible
  "editor.hover.sticky": true,             // hover docs stay open
  "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
  "editor.multiCursorModifier": "ctrlCmd", // Cmd+Click for multicursors on Mac
  "editor.suggestSelection": "recentlyUsedByPrefix", // smarter autocompletion
  "editor.inlineSuggest.enabled": true,    // ghost text suggestions (AI/IntelliCode)
  "editor.tabSize": 2,
  "editor.unicodeHighlight.invisibleCharacters": false,

  // Safer & explicit save actions
  "editor.codeActionsOnSave": {
    "source.fixAll": "never",
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },

  // ========== UI / Theme ==========
  "window.autoDetectColorScheme": true,
  "workbench.fontAliasing": "antialiased",
  "workbench.colorTheme": "Vitesse Dark",
  "workbench.preferredDarkColorTheme": "Vitesse Dark",
  "workbench.preferredLightColorTheme": "Vitesse Light",
  "workbench.iconTheme": "catppuccin-mocha",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.list.smoothScrolling": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.tabActionLocation": "left",
  "workbench.sideBar.location": "left",
  "workbench.tree.expandMode": "singleClick",
  "workbench.tree.indent": 12,             // slightly wider for clarity
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 9,
  "workbench.startupEditor": "newUntitledFile",

  // ========== Integrated Terminal ==========
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontWeight": "normal", // 300 looks slick but strains after hours
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.persistentSessionReviveProcess": "never",

  // ========== Explorer & Files ==========
  "explorer.confirmDelete": true,          // safer than false
  "explorer.confirmDragAndDrop": false,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,
  "workbench.editor.closeOnFileDelete": true,

  // ========== Git / SCM ==========
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.untrackedChanges": "separate",
  "scm.diffDecorationsGutterWidth": 2,

  // ========== Prettier ==========
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",

  // ========== Search ==========
  "search.exclude": {
    "**/*.snap": true,
    "**/*.svg": true,
    "**/.git": true,
    "**/.github": false,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/assets": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/public": true,
    "**/temp": true,
    "**/yarn.lock": true,
    "**/CHANGELOG*": true,
    "**/LICENSE*": true
  }
}
